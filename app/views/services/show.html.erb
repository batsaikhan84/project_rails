<h1>Service Name: <%= @service.name %></h1>
<h1>Time to Complete: <%= @service.duration %> weeks</h1>
<h2>Proudcts needed to complete the service:</h2>
<ul>
    <% @service.products.each do |proudct| %>
        <h2><li><%= proudct.name %></li><h2>
        <% end %>
</ul>

<%= button_to "Delete Service", service_path(@service), method: :delete %><br>
<%= button_to "Edit Service", edit_service_path(@service), method: :get %>